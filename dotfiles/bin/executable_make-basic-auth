#!/usr/bin/env python3
# -*- coding: utf-8 -*-
from base64 import b64encode
from getpass import getpass


def get_basic_auth() -> str:
    username = input("Enter your username: ")
    password = getpass("Enter your password: ")

    b = b64encode(f"{username}:{password}".encode("utf-8"))
    return f"{b.decode('utf-8')}"


def main():
    auth = get_basic_auth()
    print("Use this string anywhere you need to authenticate:")
    print(auth)


if __name__ == "__main__":
    main()
