#!/bin/bash
set -euo pipefail

{{- if or (eq .chezmoi.osRelease.id "debian") (contains "debian" (.chezmoi.osRelease.idLike | default "")) }}

sudo apt-get update
sudo apt-get install --upgrade --yes {{ range .packages.debian.default -}}{{ . }} {{ end }}
{{- if .install_docker }}
sudo apt-get install --upgrade --yes {{ range .packages.debian.docker -}}{{ . }} {{ end}}
{{ end }}
{{ end }}
